@model GuildCarsMastery.Models.Admin.AdminAddUpdateUserVM
@{
    ViewBag.Title = "AddUser";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Add User</h2>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, "First Name")
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.FirstName)</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, "Last Name")
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.LastName)</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.RoleName, "Role")
                    @Html.DropDownListFor(m => m.RoleName, Model.AvailableRoles, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.RoleName)</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.PasswordConfirmed, "Confirm Password")
                    @Html.PasswordFor(m => m.PasswordConfirmed, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.PasswordConfirmed)</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    }
</div>

