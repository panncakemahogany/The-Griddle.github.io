@model GuildCarsMastery.Models.Admin.AdminMakesVM
@{
    ViewBag.Title = "Makes";
}

<h2>Makes</h2>
<div class="panel panel-default">
    @using (Html.BeginForm())
    {
        Html.LabelFor(m => m.NewMake, "New Make");
        Html.TextBoxFor(m => m.NewMake, new { @class = "form-control" });
        <button type="submit" class="btn btn-primary">Save</button>
    }
</div>

<table style="width:150px;">
    <tr>
        <th>Make</th>
        <th>Date Added</th>
        <th>User</th>
    </tr>
    @foreach (string row in Model.CurrentMakes)
    {
        @Html.Raw(row)
    }
</table>
